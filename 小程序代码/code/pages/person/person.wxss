.page-info{
   
    margin:auto auto;
    height: -webkit-fill-available;
    background-color: #f0f0f0;
    text-align: center;
   
}
.page-info .header{
    background: red;
    height: 200rpx;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-info .header .avatar{
    width: 128rpx;
    height:128rpx;
    padding-left: 10rpx;
    border-radius: 50%;
}
.page-info .header .avatar .avatarimage{
    width: 128rpx;
    height:128rpx;
    border-radius: 50%;
}
.page-info .header .nickname{
    padding-left: 10px;
}
.page-info .menus{
    margin-top: 10px;
}
.page-info .menus .menu{
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 1px;
    padding-left: 10px;
    text-align: left;
    background: #fff;
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
}
.page-info .menu .left{
    width: 90%;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-info .menu .icon{
    width: 50rpx;
    height: 50rpx;
}
.page-info .menu .title{
    padding-left: 10px;
}
.page-info .menu .arraw{
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
    padding-right: 16px;
    display: inline-block;
    color: #B2B2B2;
}